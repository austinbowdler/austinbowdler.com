{
	"extends": "./.nuxt/tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "Node16",
		"module": "Node16",
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"types": ["vue"]
		// ...existing options...
	},
	"include": ["**/*.ts", "**/*.vue"],
	"exclude": ["node_modules"]
}
